<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:textColor="@color/blue1"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="230dp"
        android:layout_height="226dp"
        android:src="@drawable/logoapp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textHello"
        />

    <LinearLayout
        android:id="@+id/input_Register"
        android:layout_width="match_parent"
        android:layout_height="279dp"
        android:layout_below="@id/img_logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="3dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <EditText
            android:id="@+id/input_nameRegister"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_input"
            android:hint="Enter Your Full Name"
            android:paddingLeft="15dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/input_emailRegister"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_input"
            android:hint="Enter Your Email"
            android:paddingLeft="15dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/input_createpwRegister"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_input"
            android:hint="Create Password"
            android:paddingLeft="15dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/input_confirmpwRegister"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_input"
            android:hint="Confirm Password"
            android:paddingLeft="15dp"
            android:textAlignment="center" />

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/registerBtn"
        android:layout_width="284dp"
        android:layout_height="48dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="615dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bluegradient_button"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_Register"
        app:layout_constraintWidth_percent="0.75" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/registerBtn"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have an account?"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Login"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/blue1"
            android:textSize="12sp"
            android:id="@+id/txtLogin"
            />
    </LinearLayout>
    </RelativeLayout>

</FrameLayout>